<template lang="pug">
section.quick-set-panel
  ul
    li.form-control
      div.label ID
      div.input
        input(value="{{currentLayout.id}}", on-blur="changeId($event)")
    li.form-control
      div.label 对齐方式
      div.input
        select
          option 左上对齐
          option 右上对齐
          option 左下对齐
          option 右下对齐
          option 居中对齐
</template>

<script>
import {store, connect} from 'san-store'
import {getCurrentLayout} from '@/base/util.js'
import styleAlias, {order} from '@/config/style-alias.js'

export default connect.san({
  layout: 'pc.data.layout',
  activeLayout: 'pc.activeLayout'
})({
  changeId (e) {
    if (!e) {
      return
    }
    store.dispatch('updateLayoutId', {
      path: this.data.get('activeLayout'),
      value: e.target.value
    })
  },
  computed: {
    currentLayout () {
      const activeLayout = this.data.get('activeLayout')
      const layout = this.data.get('layout')
      return layout
    }
  }
})
</script>